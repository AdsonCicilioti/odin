{
  "name": "odin",
  "description": "Tema base para desenvolvimento em WordPress",
  "version": "2.2.10",
  "title": "Odin Framework",
  "homepage": "http://wpod.in/",
  "main": "Gruntfile.js",
  "devDependencies": {
    "bower": "~1.7.7",
    "grunt": "~0.4.5",
    "grunt-contrib-watch": "~0.6.1",
    "grunt-contrib-clean": "~1.0.0",
    "grunt-contrib-copy": "~0.8.2",
    "grunt-contrib-sass": "~0.9.2",
    "grunt-contrib-jshint": "~1.0.0",
    "grunt-contrib-uglify": "~0.11.1",
    "grunt-contrib-imagemin": "~1.0.0",
    "grunt-rsync": "~1.0.1",
    "grunt-ftp-deploy": "~0.1.10",
    "grunt-zip": "~0.17.1",
    "load-grunt-tasks": "~3.4.0",
    "glob-watcher": "~2.0.0",
    "node-bourbon": "~4.2.3",
    "grunt-exec": "~0.4.6",
    "time-grunt": "^1.2.1"
  },
  "engines": {
    "node": ">=0.10.1",
    "npm": ">=1.1.0"
  },
  "dirs": {
    "bower": "bower_components",
    "css": "assets/css",
    "fonts": "assets/fonts",
    "images": "assets/images",
    "js": "assets/js",
    "sass": "assets/scss",
    "tmp": "tmp"
  },
  "files" : [
    "../**",
    "!src/**",
    "!**.md",
    "!<%= pkg.dirs.sass %>/**",
    "!<%= pkg.dirs.js %>/bootstrap/**",
    "!<%= pkg.dirs.js %>/libs/**",
    "!**.zip",
    "<%= pkg.dirs.js %>/main.min.j"
  ],
  "exclusions" : [
    "**.DS_Store",
    "**Thumbs.db",
    ".editorconfig",
    "assets/js/.jshintrc",
    "README.md",
    ".git/*",
    "*.md",
    ".gitignore",
    "assets/js/**bootstrap",
    "assets/js/**libs",
    "assets/js/plugins.js",
    "assets/js/main.js",
    "*.zip",
    "*.sublime-project",
    "*.sublime-workspace",
    "src/**"
  ]
}

